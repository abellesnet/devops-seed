server {
    listen       80;
    server_name  django.localhost;

    location /static/ {
        add_header X-Served-From nginx;
        root /var/static/django;
        access_log off;
        expires max;
    }

    location / {
        proxy_set_header Host $http_host;
        proxy_pass http://django:8000/;
        proxy_redirect off;
    }

}